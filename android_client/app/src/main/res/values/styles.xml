<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_spinner_style" parent="">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="input_from_to_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">5pt</item>
        <item name="android:layout_marginRight">5pt</item>
        <item name="android:textSize">15pt</item>
        <item name="android:layout_marginTop">3pt</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="input_from_to_string">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="input_from_to_edit_text_domain">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">15pt</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="input_from_to_edit_text_port">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15pt</item>
        <item name="android:layout_marginLeft">5pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="input_from_to_edit_text_ip">
        <item name="android:textSize">15pt</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:digits">0123456789.</item>
    </style>

    <style name="input_from_to_entered_domain_or_ip">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">5pt</item>
        <item name="android:layout_marginRight">5pt</item>
        <item name="android:textSize">12pt</item>
        <item name="android:layout_marginTop">3pt</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
